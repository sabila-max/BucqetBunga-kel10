<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Checkbox Select -->
        <CheckBox
            android:id="@+id/cbSelect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:checked="true" />

        <!-- Gambar -->
        <ImageView
            android:id="@+id/ivCartImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/abigail"
            android:contentDescription="Gambar bouquet" />

        <!-- Info Produk -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp">

            <!-- Nama -->
            <TextView
                android:id="@+id/tvCartName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Caleo"
                android:textSize="16sp"
                android:textColor="#2D3142"
                android:textStyle="bold" />

            <!-- Harga -->
            <TextView
                android:id="@+id/tvCartPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Rp 175.000"
                android:textSize="14sp"
                android:textColor="#FF8FA1"
                android:textStyle="bold" />

            <!-- Note (jika ada) -->
            <TextView
                android:id="@+id/tvCartNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Catatan: ..."
                android:textSize="12sp"
                android:textColor="#666666"
                android:visibility="gone" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <!-- Minus -->
                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="-"
                    android:textSize="18sp"
                    android:backgroundTint="#FF8FA1"
                    android:textColor="@android:color/white" />

                <!-- Quantity -->
                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="40dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="16sp"
                    android:textColor="#2D3142" />

                <!-- Plus -->
                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:text="+"
                    android:textSize="18sp"
                    android:backgroundTint="#FF8FA1"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>