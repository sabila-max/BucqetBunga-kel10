<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F7">

    <!-- Header Pink -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#FF8FA1"
        android:padding="16dp">

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:elevation="4dp"
            android:radius="24dp">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Search bouquets..."
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@android:color/white"
                android:drawableStart="@android:drawable/ic_menu_search"
                android:drawablePadding="8dp" />

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <!-- Kategori -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kategori"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2D3142"
        android:layout_margin="16dp" />

    <!-- Button Kategori -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnAll"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="All"
            android:textSize="12sp"
            android:backgroundTint="#FF8FA1" />

        <Button
            android:id="@+id/btnArtificial"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Artificial"
            android:textSize="12sp"
            android:backgroundTint="@android:color/white"
            android:textColor="#2D3142" />

        <Button
            android:id="@+id/btnSnack"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Snack"
            android:textSize="12sp"
            android:backgroundTint="@android:color/white"
            android:textColor="#2D3142" />

    </LinearLayout>

    <!-- RecyclerView untuk Produk -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBouquets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

</LinearLayout>